@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <p>PageViewCount using Cookies (refresh should increment it) = @Model.PageViewCount</p>
    <h1 class="display-4">Request Headers</h1>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Header</th>
                <th>Value</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var header in this.HttpContext.Request.Headers)
            {
                <tr>
                    <td>@header.Key</td>
                    <td>@header.Value</td>
                </tr>
            }
        </tbody>
    </table>
    <h1 class="display-4">Response Headers</h1>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Header</th>
                <th>Value</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var header in this.HttpContext.Response.Headers)
            {
                <tr>
                    <td>@header.Key</td>
                    <td>@header.Value</td>
                </tr>
            }
        </tbody>
    </table>
    <h1 class="display-4">Environment</h1>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Header</th>
                <th>Value</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var prop in typeof(Environment).GetProperties(
            System.Reflection.BindingFlags.Public |
            System.Reflection.BindingFlags.Static))
            {
                <tr>
                    <td>@prop.Name</td>
                    <td>@prop.GetValue(null)</td>
                </tr>
            }
        </tbody>
    </table>
</div>
